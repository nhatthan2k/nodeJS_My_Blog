<div class='mt-4'>
    <h1>Cập Nhật Khóa Học</h1>
    <form class='mt-4' method='POST' action='/courses/{{course._id}}?_method=PUT'>
        <div>
            <label for='name'>Tên</label>
            <input type='text' class='form-control' value='{{course.name}}' id='name' name='name' />
        </div>
        <div>
            <label for='price'>giá của khóa học</label>
            <input type='text' class='form-control' value='{{course.price}}' id='price' name='price' />
        </div>
        <div>
            <label for='description'>Mô tả</label>
            <textarea
                type='text'
                class='form-control'
                id='description'
                name='description'
            >{{course.description}}</textarea>
        </div>
        <div>
            <label for='videoID'>video ID</label>
            <input type='text' class='form-control' value='{{course.videoID}}' id='videoID' name='videoID' />
        </div>
        <button type='submit' class='btn btn-primary'>Lưu khóa học</button>
    </form>
</div>